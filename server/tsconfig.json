{
  "compilerOptions": {
    "target": "ESNext", /* ECMAScript target version [ES2024, ESNext ]*/
    "module": "NodeNext", /* Specify module code generation [CommonJS, NodeNext ]*/
    "outDir": "./dist", /* Redirect output structure to the directory */
    "rootDir": "./src", /* Specify the root directory of source files */
    "strict": true, /* Enable all strict type-checking options */
    "esModuleInterop": true, /* Enable compatibility with Babel module */
    "skipLibCheck": true, /* Skip type checking of declaration files */
    "forceConsistentCasingInFileNames": true, /* Ensure that casing is consistent throughout a file */
    "moduleResolution": "NodeNext", /* For routes */
  }
}